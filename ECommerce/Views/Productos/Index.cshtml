@model IEnumerable<ECommerce.Models.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Productos</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Agregar Producto</a>
</p>
<table class="table table-success table-striped-columns">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detalle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Detalle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.ImgUrl)" width="100" height="130">
                @*@Html.DisplayFor(modelItem => item.ImgUrl)*@
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Editar</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Detalles</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
