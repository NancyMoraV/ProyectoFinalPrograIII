@model IEnumerable<ECommerce.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Agregar Pedido</a>
</p>
<table class="table table-success table-striped-columns">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>
                @Html.DisplayName("Precio")
            </th>
            <th>
                @Html.DisplayName("Imagen")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Nombre)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producto.Precio)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.Producto.ImgUrl)" width="100" height="130">
                </td>
            <td>
                    @*<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Editar</a> |*@
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
